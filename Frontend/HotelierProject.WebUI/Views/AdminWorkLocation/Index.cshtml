@model List<ResultWorkLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">

<tr>
    <th>#</th>
    <th>Lokasyon Adı</th>
    <th>Şehir</th>
    <th>Sil</th>
    <th>Güncelle</th>
</tr>
@foreach (var item in Model)
{
   
    <tr>
        <th>@item.WorkLocationId</th>
        <td>@item.WorkLocationName</td>
        <td>@item.City</td>
        <td> <a href="/AdminWorkLocation/DeleteWorkLocation/@item.WorkLocationId" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td> <a href="/AdminWorkLocation/UpdateWorkLocation/@item.WorkLocationId" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>

    </tr>
}
</table>
<a href="/AdminWorkLocation/AddWorkLocation/" class="btn btn-info">Yeni Lokasyon Ekle</a>
