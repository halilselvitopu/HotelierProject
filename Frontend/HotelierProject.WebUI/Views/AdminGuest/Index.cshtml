@model List<ResultGuestDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
 
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td> <a href="/AdminGuest/DeleteGuest/@item.Id" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td> <a href="/AdminGuest/UpdateGuest/@item.Id" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>

        </tr>
    }
</table>
<a href="/AdminGuest/AddGuest/" class="btn btn-info">Yeni Konuk Ekle</a>

