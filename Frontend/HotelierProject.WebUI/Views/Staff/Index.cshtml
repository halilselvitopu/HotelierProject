@model List<StaffListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Personel</th>
        <th>Pozisyon</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Id</th>
            <td>@item.Name</td>
            <td>@item.Position</td>
            <td> <a href="/Staff/DeleteStaff/@item.Id" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td> <a href="/Staff/UpdateStaff/@item.Id" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
            <td> <a href="/Staff/StaffDetails/@item.Id" class="btn mb-1 btn-rounded btn-outline-dark">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Staff/AddStaff/" class="btn btn-info">Yeni Personel Ekle</a>
